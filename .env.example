# Exemplo de .env
# Copie este arquivo para .env e preencha com suas credenciais

# Porta do servidor
PORT=5000

# URI de conexão do MongoDB
# Desenvolvimento local
MONGODB_URI=mongodb://localhost:27017/moviesDB

# Produção (exemplo com MongoDB Atlas)
# MONGODB_URI=mongodb+srv://<usuario>:<senha>@cluster.mongodb.net/moviesDB?retryWrites=true&w=majority

# Ambiente de execução
NODE_ENV=development

